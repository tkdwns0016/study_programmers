package make1;

public class Go {


	
	
	
	
	
	public int solution(int num) {
        int answer = 0;
        long num1 = num;
        while(true){
            if(num1==1) {
               break;
			}
             if(answer==500){
                answer = -1;
                break;
            }
             answer++;
            if(num1%2==0){
                num1 = num1/2;    
            }else{
                num1 = num1*3+1;
            }
        }
        return answer;
    }
}
